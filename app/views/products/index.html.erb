<section class="product-index">
  <h1>Products</h1>

  <section class="product-flavours">
    <% @selections.each do |selectable| %>
      <article class=<%= "product-#{selectable.product.id}" %>>
        <header>
          <h1><%= selectable.name %></h1>
        </header>

        <section class="product-links">
          <%= simple_form_for CartProduct.new, url: cart_product_path(selectable.product) do |f| %>
            <p><%= humanized_money_with_symbol selectable.price %></p>
            <%= f.input :quantity %>
            <%= f.submit 'Add to Cart' %>
          <% end %>
        </section>
      </article>
    <% end %>
  </section>
</section>

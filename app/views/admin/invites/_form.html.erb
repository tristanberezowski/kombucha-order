<%= simple_form_for [:admin, invite] do |f| %>
  <section class="form-inputs">
    <%= f.input :email %>

    <section class="delivery-exemption">
      <%= f.simple_fields_for :delivery_exemptions do |ff| %>
        <%= render 'delivery_exemption_fields', f: ff %>
      <% end %>

      <%= link_to_add_association(
        'Add Delivery exemption',
        f,
        :delivery_exemptions,
        class: "primary-button"
      ) %>
    </section>
  </section>

  <section class="form-links">
    <%= f.submit %>
  </section>
<% end %>

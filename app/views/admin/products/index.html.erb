<section class="admin-products-index">
  <h1>Products</h1>

  <% @products.each do |product|%>
    <div><%= product.name %></div>
    <div><%= product.price %></div>
    <a href="/admin/products/edit/<%= product.id %>" >Edit</a>
  <% end %>

  <%= link_to 'New Product', new_admin_product_path %>
</section>

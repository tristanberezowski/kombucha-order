<section class="admin-products-index">
  <h1>Products</h1>

  <%= link_to(
    'New Liquid Product',
    new_admin_product_path(
      product: {
        selectable_type: 'LiquidSelection'
      }
    )
  ) %>

  <hr />

  <% @products.each do |product|%>
    <div><%= product.name %></div>
    <div><%= product.price %></div>
    <a href="/admin/products/<%= product.id %>/edit" >Edit</a>
  <% end %>
  
</section>

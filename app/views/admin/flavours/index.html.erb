<section class="admin-flavours-index">
  <% @flavours.each do |flavour| %>
    <article>
      <a href="/admin/flavours/<%= flavour.id %>/edit"><strong><%= flavour.name %><%= " " %><%= flavour.liquid.name %></strong></a>   
      <p><%= flavour.description %></p>
    </article>
    <hr />
  <% end %>

  <a href="/admin/flavours/new">New Flavour</a>
</section>